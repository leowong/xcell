<% div_for_comment(comment, comment_counter) do %>
  <div class="meta">
    <span class="name">
      <%= link_to_unless comment.site_url.blank?, h(comment.name), h(comment.site_url), :rel => "nofollow", :target => "_blank" %>
    </span>
    <span class="timestamp">
      &nbsp;<%= time_ago_in_words(comment.created_at) %><%= I18n.t('timestamp.ago') %>:
    </span>
  </div>
  <div class="content">
    <%= format_comment comment.content %>
  </div>
<% end %>
